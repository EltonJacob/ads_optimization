# ================================================================================
# AMAZON PPC OPTIMIZATION TOOL - ENVIRONMENT CONFIGURATION TEMPLATE
# ================================================================================
# Copy this file to .env and update with your actual credentials
# This template is safe to commit to version control

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================
DATABASE_URL=sqlite:///amazon_ppc.db

# ================================================================================
# AMAZON ADS API CREDENTIALS
# ================================================================================
AMAZON_ADS_CLIENT_ID=your_client_id_here
AMAZON_ADS_CLIENT_SECRET=your_client_secret_here
AMAZON_ADS_REFRESH_TOKEN=your_refresh_token_here
AMAZON_ADS_API_BASE=https://advertising-api.amazon.com
AMAZON_ADS_AUTH_URL=https://api.amazon.com/auth/o2/token

# ================================================================================
# AI PROVIDER CONFIGURATION
# ================================================================================
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
AI_PROVIDER=openai
AI_MODEL=gpt-4-turbo-preview

# ================================================================================
# OPTIMIZATION PARAMETERS
# ================================================================================
TARGET_ACOS=0.25
MIN_BID=0.20
MAX_BID=1.60
OPTIMIZE_DEFAULT_MODE=dry-run
OPTIMIZE_DEFAULT_WINDOW=7

# ================================================================================
# API FETCH CONFIGURATION
# ================================================================================
FETCH_RATE_LIMIT_PER_SEC=5.0
FETCH_MAX_RETRIES=3
FETCH_BACKOFF_SECONDS=1.0
FETCH_POLL_TIMEOUT_SECONDS=600.0

# ================================================================================
# APPLICATION SETTINGS
# ================================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO
TZ=America/Chicago

# ================================================================================
# FRONTEND CONFIGURATION
# ================================================================================
FRONTEND_URL=http://localhost:3000

# ================================================================================
# FILE UPLOAD SETTINGS
# ================================================================================
MAX_UPLOAD_SIZE_MB=100
UPLOAD_DIR=data/uploads

# ================================================================================
# ADVANCED OPTIMIZATION SETTINGS
# ================================================================================
MIN_IMPRESSIONS_FOR_PAUSE=5000
HIGH_ACOS_MULTIPLIER=2.0
LOW_CTR_THRESHOLD=0.002
MAX_BID_INCREASE=0.20
MAX_BID_DECREASE=0.30
MIN_SPEND_FOR_PAUSE=50.0
MIN_DAYS_POOR_PERFORMANCE=14

# ================================================================================
# MONITORING & LOGGING
# ================================================================================
ENABLE_REQUEST_LOGGING=True
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# ================================================================================
# DEVELOPMENT SETTINGS
# ================================================================================
AUTO_RELOAD=True
ENABLE_DOCS=True
ENABLE_MOCK_DATA=False
